@model MovieApp.Models.Movies

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title - Movie Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #121212;
            color: white;
        }

        .movie-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            text-align: center;
            padding: 20px;
        }

        .movie-poster {
            width: 100%;
            max-width: 400px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(255, 255, 255, 0.1);
        }

        .movie-title {
            font-size: 2rem;
            font-weight: bold;
            margin-top: 20px;
            text-transform: uppercase;
        }

        .movie-info {
            font-size: 1.2rem;
            margin: 10px 0;
            color: #ddd;
        }

        .btn-movie-action {
            display: inline-block;
            background: linear-gradient(90deg, #ff5733, #c70039);
            color: white;
            font-size: 1.2rem;
            font-weight: bold;
            padding: 12px 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: background 0.3s ease-in-out;
            margin: 10px;
        }

            .btn-movie-action:hover {
                background: linear-gradient(90deg, #c70039, #900c3f);
            }
    </style>
</head>
<body>
    <div class="movie-container">
        <img src="@Model.ImageUrl" alt="@Model.Title Poster" class="movie-poster">
        <h1 class="movie-title">@Model.Title</h1>
        <p class="movie-info">Director: @Model.Director</p>
        <p class="movie-info">Stars: @string.Join(", ", Model.Stars)</p>
        <p class="movie-info">Release Year: @Model.ReleaseYear</p>

        <a href="/" class="btn-movie-action">Back to Home</a>
    </div>
</body>
</html>
